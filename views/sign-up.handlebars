<link
	href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css'
	rel='stylesheet'
	integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC'
	crossorigin='anonymous'
/>

<div class='principal-container'>
	<div class='container'>
		<div class='row'>
			<div class='col-md-4 img-content'>
				<img
					class='img-home img-thumbnail'
					src='/assets/images/high5logo.png'
				/>
			</div>
			<div class='col-md-7 form-content'>
				<h1 class='title'>High5!</h1>

				<p>
					Are you bored? Don't have plans tonight? We have the perfect app for
					you. This app will help you find a close-knit group of people that you
					can vent to about your problems or share your excitement about your
					team winning the championship. If you're new to town or just want to
					connect with new people join High 5! High 5! allows you to create
					blogs, interact with blogs, and follow current members that have
					similar interests as you. Sign up today!
				</p>
				<div class='interests-buttons'>
					{{!-- {{> interest-buttons interests}} --}}
					<div id='interestId' class='wrapper'>
						<button id='reading'>reading</button>
						<button id='eating'>eating</button>
						<button id='drinking'>drinking</button>
						<button id='sports'>sports</button>
						<button id='games'>games</button>
						<button id='coding'>coding</button>
						<button id='exercise'>exercise</button>
						<button id='movies'>movies</button>
						<button id='travel'>travel</button>
						<button id='animals'>animals</button>
					</div>
				</div>

				<form class='form-horizontal' role='form'>
					<div class='form-group mb-3'>
						{{! <label for='inputEmail3' class='form-label'>Email</label> }}
						<div class='col-sm-10'>
							<input
								type='email'
								class='form-control'
								id='inputEmail3'
								placeholder='Email'
							/>
						</div>
					</div>
					<div class='form-group mb-3'>
						{{! <label
							for='inputUsername3'
							class='col-sm-2 form-label'
						>Username</label> }}
						<div class='col-sm-10'>
							<input
								type='username'
								class='form-control'
								id='inputUsername3'
								placeholder='Username'
							/>
						</div>
					</div>
					<div class='form-group mb-3'>
						{{! <label
							for='inputPassword3'
							class='col-sm-2 form-label'
						>Password</label> }}
						<div class='col-sm-10'>
							<input
								type='password'
								class='form-control'
								id='inputPassword3'
								placeholder='Password'
							/>
						</div>
					</div>

					<div class='form-group'>
						<div class='col-sm-offset-2 col-sm-10'>
							<button
								id='signupBtn'
								type='submit'
								class='btn d-grid gap-2 col-6 mx-auto btn-outline-primary'
							>Sign up</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

<script src='/javascript/sign-up.js'></script>