<section id='content' class='container'>
	<!-- Begin .page-heading -->
	<div class='page-heading'>
		<div class='media clearfix'>
			<div class='media-left pr30'>
				<a href='#'>
					<img
						class='media-object mw150'
						src='https://bootdey.com/img/Content/avatar/avatar7.png'
						alt='...'
					/>
					
				</a>
			</div>
			<div class='media-body va-m'>
				<h2 class='media-heading'>
					{{user.username}}
					
				</h2>
				
				
			</div>
		</div>
	</div>

	<div class='user-panel-row'>
		<div class='col-md-4'>

			<div class='panel'>
				<div class='panel-heading'>
					{{!-- <span class='panel-icon'>
						<i class='fa fa-trophy'></i>
					</span> --}}
					<h3>
						<span class='panel-title'> <strong>My Interests</strong></span>
					</h3>
				</div>
				<div class="col">
						<div class='interests panel-body pb5'>
						
								<li> {{faker 'commerce.product'}}</li>
								<li> {{faker 'commerce.productName'}}</li>
								<li> {{faker 'address.country'}}</li>
								<li> {{faker 'commerce.product'}}</li>
								<li> {{faker 'commerce.productName'}}</li>
							</div>
				</div>
			</div>
			<div class="col-md-4">
				<div class='panel'>
					<section>
							<div class='panel-heading'>
							{{!-- <span class='panel-icon'>
								<i class='fa fa-pencil'></i>
							</span> --}}
					{{!-- <br> --}}
							<h3>
								<span class='panel-title'> Create New Post</span>
							</h3>
					
						<form class="new-post-form">
							<div>
								<label for="post-title">Title</label>
								<input type="text" id="post-title" name="post-title" />
							</div>
							<div>
								<label for="content">Content</label>
								<input id="content" name="content" />
							</div>
							
							<button type="submit" class="btn">Create</button>
						</form>
					</section>
					
					{{#if posts.length}}
					<section id="user-posts">
						<div class="panel">
							<div class="panel-heading">
								<h3>Your High5! Posts</h3>
						<ol>
							{{#each posts as |post|}}
							<div>
								{{!-- {{> post-info post}} --}}
								<h4>
									<span class='panel-title'>{{title}}</span>
								</h4>
								<p>{{content}}</p>
								<div >
									<a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
									<a href="/profile/edit/{{id}}" class="user-links">{{comments.length}}-   See comment(s)</a>
								</div>
							</div>
							{{/each}}
						</ol>
							</div>
						</div>
					</section>
					
					{{/if}}

					
				</div>
			</div>
			</div>
		</div>
		{{!-- <div class='col-md-8'>

			<div class='tab-block'>
				<ul class='nav nav-tabs'>
					<li class='active'>
						<a href='/profile' data-toggle='tab'>Add Post</a>
					</li>
					<li>
						<a href='/dashboard' data-toggle='tab'>Comments</a>
					</li>
					<li>
						<a href="/user-feed" id='user-feed' data-toggle='tab'>user-feed</a>
					</li>
				</ul>
				
			</div>
		</div> --}}
	</div>
</section>

<script src="/javascript/add-post.js"></script>
<script src="/javascript/comment.js"></script>
<script src="/javascript/user-feed.js"></script>
